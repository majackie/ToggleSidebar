{
	"manifest_version": 3,
	"name": "Toggle Sidebar",
	"version": "1.0",
	"description": "Toggle Sidebar for Google Messenger and WhatsApp",
	"permissions": [
		"activeTab"
	],
	"action": {
		"default_icon": "icon.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://messages.google.com/*",
				"https://web.whatsapp.com/*"
			],
			"js": [
				"content.js"
			]
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}